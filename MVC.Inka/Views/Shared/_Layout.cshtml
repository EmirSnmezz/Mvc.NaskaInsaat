
<html>
<head>
    <title> NASKA İNSAAT </title>
    <meta name="keywords" content="NASKA İNŞAAT, mimari tasarım, dış cephe uygulama, iç mimari uygulama, inşaat müşavirlik, Cephe elamanları, alüminyum cephe, cephi uygulama, NASKA MİMARİ TASARIM UYGULAMA VE MÜŞAVİRLİK">
    <meta name="description" content="@ViewBag.Title">
    <meta name="author" content="Emir Sönmez">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href=@Url.Content("~/css/base.css") asp-append-version="true" />
    <link rel="stylesheet" href=@Url.Content("~/css/skeleton.css") asp-append-version="true" />
    <link rel="stylesheet" href=@Url.Content("~/css/layout.css") asp-append-version="true" />
    <link rel="stylesheet" href=@Url.Content("~/css/settings.css") asp-append-version="true" />
    <link rel="stylesheet" href=@Url.Content("~/css/jquery.fancybox.css") asp-append-version="true" />
    <link rel="stylesheet" href=@Url.Content("~/css/font-awesome.css") asp-append-version="true" />
    <link rel="stylesheet" href=@Url.Content("~/css/jquery.custombox.css") asp-append-version="true">
    <link rel="stylesheet" href=@Url.Content("~/css/owl.carousel.css") asp-append-version="true" />
    <link rel="stylesheet" href=@Url.Content("~/css/retina.css")  asp-append-version="true" />

    <link rel="stylesheet" href=@Url.Content("~/css/custom-1.css") asp-append-version="true" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            overflow:scroll;
        }

        .content-wrapper {
            min-height: calc(100vh - 100px); /* Footer yüksekliği kadar çıkar */
        }

        .footer {
            height: 100px; /* Footer yüksekliği (gerekiyorsa değiştir) */
            background-color: #f1f1f1; /* Örnek arka plan */
        }
    </style>
    

</head>
<body>
    <div id="menu-wrap">
        <div class="logo"></div>
        <ul class="slimmenu">
            <li>
                @Html.ActionLink("Anasayfa", "Index", "Home")
            </li>
            <li>
                @Html.ActionLink("Hakkımızda", "About", "Home")
            </li>
            <li>
                @Html.ActionLink("Referanslarımız", "Referances", "Home")
            </li>
            <li>
                @Html.ActionLink("Projeler", "Projects", "Home")
            </li>
            <li>
                @Html.ActionLink("Grup Şirketlerimiz", "Services", "Home")
            </li>
            <li>
                @Html.ActionLink("İletişim", "Contact", "Home")
            </li>
        </ul>
    </div>
    <div class="content-wrapper" style="margin-top:10%">
        @RenderBody()
    </div>
    <footer class="footer">
        @await Html.PartialAsync("Footer")
    </footer>

    @* <script data-cfasync="false" src=""></script>        *@
    <script type="text/javascript" src=@Url.Content("~/js/jquery.js")></script>
    <script type="text/javascript" src=@Url.Content("~/js/modernizr.custom.js")></script>
    <script type="text/javascript" src=@Url.Content("~/js/royal_preloader.min.js")></script>
    <script type="text/javascript">
        (function($) { "use strict";

                    Royal_Preloader.config({
                        mode: 'number', // 'number', "text" or "logo"
                        timeout:        0,
                        showInfo:       true,
                        showPercentage: true,
                        opacity:        1,
                        background:     ['#FFFFFF']
                    });
        })(jQuery);
    </script>

    <script type="text/javascript" src=@Url.Content("~/js/jquery.slimmenu.js")></script>
    <script type="text/javascript" src=@Url.Content("~/js/shine.min.js")></script>
    @* <script type="text/javascript" src=@Url.Content("~/js/retina-1.1.0.min.js")></script> *@
    <script type="text/javascript" src=@Url.Content("~/js/jquery.themepunch.plugins.min.js")></script>
    <script type="text/javascript" src=@Url.Content("~/js/jquery.themepunch.revolution.min.js")></script>

    <script type="text/javascript">
        (function($) { "use strict";
                        var revapi;

                        jQuery(document).ready(function() {

                               revapi = jQuery('.tp-banner').revolution(
                                {
                                    delay:5000,
                                    startwidth:2000,
                                    startheight:500,
                                    hideThumbs:0,
                                     soloArrowRightHOffset:20,
                                     soloArrowLeftHOffset:20,
                                     soloArrowRightVOffset:50,
                                     soloArrowLeftVOffset:50,
                                    onHoverStop:"on",
                                    navigationType: "none",
                                    fullWidth:"on",
                                    fullScreen:"on",
                                    fullScreenOffsetContainer: ""
                                });

                        });	//ready
        })(jQuery);

    </script>
    <script type="text/javascript" src=@Url.Content("~/js/jquery.easing.js")></script>
    <script type="text/javascript" src=@Url.Content("~/js/gmaps.js")></script>


    <script type="text/javascript" src=@Url.Content("~/js/flippy.js")></script>
    <script type="text/javascript" src=@Url.Content("~/js/jquery.bxslider.min.js")></script>
    <script type="text/javascript" src=@Url.Content("~/js/jquery.easing.js")></script>
    <script type="text/javascript" src=@Url.Content("~/js/jquery.custombox.js")></script>
    <script type="text/javascript" src=@Url.Content("~/js/jquery.transit.min.js")></script>
    <script type="text/javascript" src=@Url.Content("~/js/jquery.isotope.min.js")></script>
    <script type="text/javascript" src=@Url.Content("~/js/jquery.masonry.min.js")></script>
    <script type="text/javascript" src=@Url.Content("~/js/jquery.fitvids.js")></script>
    <script type="text/javascript" src=@Url.Content("~/js/jquery.fancybox.js")></script>
    <script type="text/javascript" src=@Url.Content("~/js/owl.carousel.js")></script>
    <script type="text/javascript" src=@Url.Content("~/js/jquery.flexslider.min.js")></script>
    <script type="text/javascript" src=@Url.Content("~/js/contact.js")></script>
    <script type="text/javascript" src=@Url.Content("~/js/template.js")></script>
</body>
</html>